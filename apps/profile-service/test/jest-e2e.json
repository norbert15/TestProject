{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@libs/shared/(.*)$": "<rootDir>/../../../libs/shared/$1",
    "^@libs/shared$": "<rootDir>/../../../libs/shared/index.ts"
  }
}
